#!/bin/bash
set -euo pipefail
#==============================================================#
# File      :   release-pro
# Desc      :   release pigsty pro offline packages
# Ctime     :   2023-09-19
# Mtime     :   2024-07-06
# Path      :   bin/release-pro
# Deps      :   gzip, tar, ssh, rsync
# Author    :   Ruohang Feng (rh@vonng.com)
# License   :   AGPLv3
#==============================================================#
PROG_NAME="$(basename $0)"
PROG_DIR="$(cd $(dirname $0) && pwd)"
VERSION=${1-'v2.7.0'}

CACHE_SCRIPT=${PROG_DIR}/cache

#--------------------------------------------------------------#
# Usage
#--------------------------------------------------------------#
# bin/release-pro

#--------------------------------------------------------------#
# Utils
#--------------------------------------------------------------#
__CN='\033[0m';__CB='\033[0;30m';__CR='\033[0;31m';__CG='\033[0;32m';
__CY='\033[0;33m';__CB='\033[0;34m';__CM='\033[0;35m';__CC='\033[0;36m';__CW='\033[0;37m';
function log_info() {  printf "[${__CG} OK ${__CN}] ${__CG}$*${__CN}\n";   }
function log_warn() {  printf "[${__CY}WARN${__CN}] ${__CY}$*${__CN}\n";   }
function log_error() { printf "[${__CR}FAIL${__CN}] ${__CR}$*${__CN}\n";   }
function log_debug() { printf "[${__CB}HINT${__CN}] ${__CB}$*${__CN}\n"; }
function log_input() { printf "[${__CM} IN ${__CN}] ${__CM}$*\n=> ${__CN}"; }
function log_hint()  { printf "${__CB}$*${__CN}\n"; }

#--------------------------------------------------------------#
# Copy building script
#--------------------------------------------------------------#
log_info "copy /tmp/cache script"
CACHE_SCRIPT=${PROG_DIR}/cache
scp ${CACHE_SCRIPT} el8:/tmp/cache &
scp ${CACHE_SCRIPT} el9:/tmp/cache &
scp ${CACHE_SCRIPT} d12:/tmp/cache  &
scp ${CACHE_SCRIPT} u20:/tmp/cache  &
scp ${CACHE_SCRIPT} u22:/tmp/cache  &
wait


#--------------------------------------------------------------#
# Make Offline Package
#--------------------------------------------------------------#
log_info "make offline packages"
ssh -t el8 "sudo bash /tmp/cache" &
ssh -t el9 "sudo bash /tmp/cache" &
ssh -t d12 "sudo bash /tmp/cache" &
ssh -t u20 "sudo bash /tmp/cache" &
ssh -t u22 "sudo bash /tmp/cache" &
wait


#--------------------------------------------------------------#
# Copy to local dist dir
#--------------------------------------------------------------#
log_info "copy pigsty-pkg to local dist dir"
mkdir -p dist/${VERSION}/pro/
scp el8:/tmp/pkg.tgz  "dist/${VERSION}/pro/pigsty-pkg-${VERSION}.el8.x86_64.tgz"      &
scp el9:/tmp/pkg.tgz  "dist/${VERSION}/pro/pigsty-pkg-${VERSION}.el9.x86_64.tgz"      &
scp d12:/tmp/pkg.tgz  "dist/${VERSION}/pro/pigsty-pkg-${VERSION}.debian12.x86_64.tgz" &
scp u20:/tmp/pkg.tgz  "dist/${VERSION}/pro/pigsty-pkg-${VERSION}.ubuntu20.x86_64.tgz" &
scp u22:/tmp/pkg.tgz  "dist/${VERSION}/pro/pigsty-pkg-${VERSION}.ubuntu22.x86_64.tgz" &
wait

log_info "building complete"
ls -alh "${PROG_DIR}/../dist/${VERSION}/pro"
cd "${PROG_DIR}/../dist/${VERSION}/pro" && md5sum *.tgz > checksums && cat checksums
